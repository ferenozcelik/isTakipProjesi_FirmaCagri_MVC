@using MVCFirmaCagri.Models.Entity
@model List<TblCagrilar>
@{
    ViewBag.Title = "AktifCagrilar";
    Layout = "~/Views/Shared/FirmaLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>Çağrı ID</th>
        <th>Konu</th>
        <th>Açıklama</th>
        <th>Tarih</th>
        <th>Düzenle</th>
        <th>Detaylar</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ID</td>
            <td>@item.Konu</td>
            <td>@item.Aciklama</td>
            <td>@item.Tarih</td>
            <td><a href="#" class="btn btn-success">Düzenle</a></td>
            <td><a href="/Default/CagriDetay/@item.ID/" class="btn btn-info">Detaylar</a></td>
        </tr>
    }
</table>
<a href="/Default/YeniCagri/" class="btn btn-warning">Yeni Çağrı Oluştur</a>
